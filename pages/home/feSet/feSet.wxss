/* pages/home/feSet/feSet.wxss */

/* 故障信息 */
.faultInfo{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #eae8e9;
  padding-left: 30rpx;
}
.fault-wraper{
  padding: 0 30rpx;

}
.item-option{
  border-bottom:1px solid #cdcdcd;
  padding:0 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin:0 auto;
}
.updata{
  margin-left: 20rpx;
}
/* 问题和建议 */
.textarea{width: 670rpx;border: 1px solid #cdcdcd;border-radius: 10rpx;min-height:150rpx;padding: 10rpx ;text-align: justify;margin-top: 10rpx}
textarea{width:650rpx;height: 150rpx;line-height: 30rpx;}
/* 上传故障图片 */
.camera{width: 200rpx;line-height: 200rpx;border: 1px solid #cdcdcd;text-align: center;margin-top: 10rpx}
.icon-camera1 {font-size: 50rpx}
.img{width: 202rpx;height: 202rpx;overflow: hidden;margin-left: 20rpx;margin-top: 10rpx}
image{width: 100%;height: 100%;}
/* 信息 */
.msg{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #eae8e9;
  padding-left: 30rpx;
  margin-top: 20rpx;
}
.section{margin: 20rpx 0}
input{border-radius: 15rpx;display: inline-block;width: 60%;padding: 10rpx;height: 70rpx;vertical-align: middle;}
/* 提交 */
.submit{background: #0194dd;margin: 30rpx;font-weight: bold;color: white}
.gallery {    
  width:630rpx;
margin:0 auto;
display:flex;
justify-content:flex-start;
flex-wrap:wrap;
max-height:635rpx;
overflow:hidden;

}
/*每张图片所占容器*/
.item {    
  position:relative;
margin:15rpx;
width:180rpx;
height:180rpx;
}
.item image{
  width: 100%;
  height: 100%;
}
/*add按钮*/
.item .addIcon{
  position:relative;
  width:200rpx;
  height:200rpx;
  text-align:center;
  line-height:200rpx;
  font-size:80rpx;
  background: #f2f2f2;
  color: #555;
}
/*删除按钮*/
.delete {    
 position:absolute;
right:-13rpx;
top:-18rpx;
opacity:1;
height:36rpx;
font-size:22rpx;
font-weight:700;
padding:0 8rpx 0 10rpx;
}

.textarea {
  width: 95%;
  border:1px solid #cdcdcd;
  border-radius:10rpx;
  min-height:150rpx;
  padding:10rpx 10rpx 10rpx 20rpx;
  text-align:justify;
  margin-top:10rpx;
  margin: 2rpx auto;
}
.clean-border{
  
  border-bottom:1px solid #fff;
 
}