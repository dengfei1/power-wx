/* 外层视图 */

.cont {
  width: 100%;
  margin: 0 auto;
}

.list-item {
  position: relative;
  line-height: 50rpx;
  margin: 20rpx;
  background: white;
  padding: 10rpx 10rpx 40rpx 10rpx;
  border-radius: 10rpx;
  /* line-height: 170rpx;  */
  overflow: hidden;
}
.item{
  width: 100%;
}
.left{
  width: 440rpx;
  overflow: hidden;
  margin-top:15rpx;
  font-size: 25rpx;
  padding-left: 10rpx;
}
.left>view{
  line-height: 35rpx;
  white-space: nowrap;
}
/* 删除外层包裹视图 */
.del{
  width: 50rpx;
  position: absolute;
  top: 10rpx;
  right: 0rpx;
  text-align: center;
}
/* 查看设备详情 */
.chakan{
  width: 90rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background: #235ef3;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
}

.list_del {
  position: absolute;
  top: 0;
}

.list_del.txt {
  position: relative;
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 删除 */

.list_del.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
  line-height: 320rpx;
}

