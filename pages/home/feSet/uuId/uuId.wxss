/* 弹框 */

.mask {
  text-align: center;
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 99;
  top: 0;
  left: 0;
  padding: 0 20rpx;
}

.isRuleShow {
  display: block;
}

.isRuleHide {
  display: none;
}

.maskSel {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.maskLine {
  border-bottom: 1px solid #cdcdcd;
  width: 98%;
  margin: 0 auto;
}

/* 输入绑定 */

.write {
  background: rgba(0, 0, 0, 0.2);
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
}

.box {
  margin: 50rpx;
  width: 600rpx;
  padding: 25rpx;
  border-radius: 10rpx;
}

.size {
  width: 520rpx;
  border: 1px solid #cdcdcd;
  height: 80rpx;
